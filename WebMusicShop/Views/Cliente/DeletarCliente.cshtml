@model WebMusicShop.Models.Entities.Cliente

@{
    ViewData["Title"] = "DeletarCliente";
}

<h1>Deletar Cliente</h1>

<h3>Tem certeza que deseja deletar esse cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
    </dl>
    
    <form asp-action="DeletarCliente">
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-action="ListarClientes">Ir para Lista de Clientes</a>
    </form>
</div>
