<div>
    @Html.ActionLink("Atualizar", "AtualizaProduto", new { id = Model.Id }, new {@class = "btn btn-primary"})
    <a class="btn btn-success" asp-action="ListarProdutos">Voltar para Lista de produtos</a>
</div>
