@model WebMusicShop.Models.Entities.Produto

@{
    ViewData["Title"] = "DeletaProduto";
}

<h1>Deletar Produto</h1>

<h3>Tem certeza que deseja deletar esse produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="DeletaProduto">
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="ListarProdutos">Voltar para Lista de Produtos</a>
    </form>
</div>
