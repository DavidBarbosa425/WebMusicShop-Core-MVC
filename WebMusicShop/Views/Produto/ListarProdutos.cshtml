@model IEnumerable<WebMusicShop.Models.Entities.Produto>

@{
    ViewData["Title"] = "ListarProdutos";
}

<h1>Lista de Produtos</h1>

<p>
    <a class="btn btn-success" asp-action="CadastraProduto">Cadastrar um novo produto</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdEstoque)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "Edit", new { id = item.Id }, new {@class = "btn btn-primary"}) 
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new {@class = "btn btn-success"}) 
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new {@class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
