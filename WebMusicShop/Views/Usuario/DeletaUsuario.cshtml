@model WebMusicShop.Models.Entities.Usuario

@{
    ViewData["Title"] = "DeletaUsuario";
}

<h1>Deletar Usuário</h1>

<h3>Tem certeza que deseja deletar este usuário?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
     </dl>
    
    <form asp-action="DeletaUsuario">
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="ListarUsuarios">Voltar para Lista de Usuários</a>
    </form>
</div>
