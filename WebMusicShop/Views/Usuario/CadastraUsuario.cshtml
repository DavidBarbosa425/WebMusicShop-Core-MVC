@using WebMusicShop.Models.Enums
@model WebMusicShop.Models.Entities.Usuario

@{
    ViewData["Title"] = "CadastraUsuario";
}

<h1>Cadastrar Usuário</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastraUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusEnum" class="control-label"></label>
                <select asp-for="StatusEnum" class="control-label form-control">
                    <option value=@StatusUsuario.Ativo>Ativo</option>
                    <option value=@StatusUsuario.Inativo>Inativo</option>
                    <option value=@StatusUsuario.Bloqueado>Bloqueado</option>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PerfilEnum" class="control-label"></label>
                <select asp-for="PerfilEnum" class="form-control" >
                    <option value=@Perfil.Administrador>Administrador</option>
                    <option value=@Perfil.Padrao>.Padrao</option>
                </select>
                <span asp-validation-for="PerfilEnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success mt-2" asp-action="ListarUsuarios">Voltar para Lista de Usuários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
