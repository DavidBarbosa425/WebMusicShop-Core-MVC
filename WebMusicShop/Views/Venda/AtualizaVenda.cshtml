@model WebMusicShop.Models.Entities.Venda

@{
    ViewData["Title"] = "AtualizaVenda";
}

<h1>Atualizar Venda</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizaVenda">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto" class="control-label"></label>
                <input asp-for="Produto" class="form-control" id="produto"/>
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" id="cliente" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" id="usuario" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success mt-2" asp-action="ListarVendas">Voltar para Lista de Vendas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script>
         $("#produto").autocomplete({
             source: '@Url.Action("PesquisarProdutos","Produto")',
             minlength : 1
         });
    </script>

        <script>
         $("#cliente").autocomplete({
             source: '@Url.Action("PesquisarClientes","Cliente")',
             minlength : 1
         });
    </script>

        <script>
         $("#usuario").autocomplete({
             source: '@Url.Action("PesquisarUsuarios","Usuario")',
             minlength : 1
         });
    </script>
}
