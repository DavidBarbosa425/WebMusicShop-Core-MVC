@model IEnumerable<WebMusicShop.Models.Entities.Venda>

@{
    ViewData["Title"] = "ListarVendas";
}

<h1>Lista de Vendas</h1>

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["MensagemSucesso"]
        <button class="btn btn-close float-end"></button>
    </div>
}
@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["MensagemErro"]
         <button class="btn btn-close float-end"></button>
    </div>
}

<p>
    <a class="btn btn-success" asp-action="CadastraVenda">Cadastrar uma nova venda</a>
</p>
<table class="table table-hover" id="table-vendas">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVenda)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "AtualizaVenda", new { id = item.Id }, new {@class = "btn btn-primary"}) 
                @Html.ActionLink("Detalhes", "BuscaVenda", new { id = item.Id }, new {@class = "btn btn-success"}) 
                @Html.ActionLink("Deletar", "DeletaVenda", new { id = item.Id }, new {@class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
